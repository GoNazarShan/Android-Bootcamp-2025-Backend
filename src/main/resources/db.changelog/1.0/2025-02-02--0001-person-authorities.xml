

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

    <changeSet id="2025-02-02--0001-person-authorities" author="IgraM">
        <createTable tableName="person_authorities">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_personauth_persn" referencedTableName="users"
                referencedColumnNames="id"/>
            </column>
            <column name="auth_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_personauth_roles" referencedTableName="users"
                referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
